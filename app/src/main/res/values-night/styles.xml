<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textSize">22sp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconTint">@color/YP_Black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_weight">1</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="SettingsActivityButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">false</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">24dp</item>
        <item name="iconTint">@color/white</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingBottom">21dp</item>
        <item name="android:paddingTop">21dp</item>
    </style>
    <style name="BackButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="icon">@drawable/arrow_back</item>
        <item name="android:text">_</item>
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">@color/YP_Black</item>

    </style>
    <style name="TextWithBackButtonStyle" >
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="SearchEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColorHint">@color/YP_Black</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingVertical">8.5dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="drawableTint">@color/YP_Black</item>
    </style>
    <style name="ClearButtonStyle">
        <item name="android:tint">@color/YP_Black</item>
    </style>
</resources>