<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_margin="4dp"


    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"


>

        <Button
            android:id="@+id/back_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@drawable/arrow_back"
            android:text="_"
            app:iconTint="@color/YP_Black"
            />

        <TextView
            android:layout_marginLeft="12dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/ysmedium"
            android:text="@string/title_settings"
            android:textColor="@color/YP_Black"
            android:textSize="22sp"

            />
    </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="12dp"


            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="21dp"
                android:paddingTop="21dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/ysregular"
                android:text="@string/button_switch_theme"
                android:textColor="@color/YP_Black"
                android:textSize="16sp"
                android:layout_gravity="start"

            />


            <Switch
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="end|center"

                android:textColor="@color/YP_Black"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </FrameLayout>

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/ysregular"
            android:text="@string/button_share_app"
            android:textColor="@color/YP_Black"
            android:textSize="16sp"
            android:gravity="start"
            app:icon="@drawable/share"
            app:iconGravity="end"
            app:iconPadding="24dp"

            app:iconTint="@color/YP_Gray"
            android:paddingBottom="21dp"
            android:paddingTop="21dp"
            android:paddingStart="12dp"

            />




        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/ysregular"
            android:text="@string/button_support"
            android:textColor="@color/YP_Black"
            android:textSize="16sp"
            android:gravity="start"
            app:icon="@drawable/support"
            app:iconGravity="end"
            app:iconPadding="24dp"

            app:iconTint="@color/YP_Gray"
            android:paddingBottom="21dp"
            android:paddingTop="21dp"
            android:paddingStart="12dp"

            />




        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/ysregular"
            android:text="@string/button_user_agre"
            android:textColor="@color/YP_Black"
            android:textSize="16sp"
            android:gravity="start"
            app:icon="@drawable/arrow_forward"
            app:iconGravity="end"
            app:iconPadding="24dp"

            app:iconTint="@color/YP_Gray"
            android:paddingBottom="21dp"
            android:paddingTop="21dp"
            android:paddingStart="12dp"

            />



</LinearLayout>